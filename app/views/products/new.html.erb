<h1>New Product</h1>

<%= form_with model: @product do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :currency %><br>
    <%= form.text_area :currency %>
  </div>

  <div>
    <%= form.label :unit_amount %><br>
    <%= form.text_area :unit_amount %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
